<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainApp.ClubsController">
    <children>
        <VBox fx:id="mainContent" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="750.0" spacing="20.0" style="-fx-background-color: #f4f5f7;">
            <padding>
                <Insets top="30.0" />
            </padding>
            <children>
                <Label text="All Clubs">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <AnchorPane VBox.vgrow="ALWAYS">
                    <children>
                        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" vbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <HBox fx:id="clubHBox" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="40.0">
                                    <padding>
                                        <Insets bottom="40.0" left="80.0" right="80.0" top="40.0" />
                                    </padding>
                                </HBox>
                            </content>
                        </ScrollPane>
                        <Button fx:id="leftButton" onAction="#scrollLeft" styleClass="carousel-nav-button" text="&lt;" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" />
                        <Button fx:id="rightButton" onAction="#scrollRight" styleClass="carousel-nav-button" text="&gt;" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" />
                    </children>
                </AnchorPane>
            </children>
        </VBox>

        <VBox fx:id="popupContainer" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.4);" visible="false">
            <children>
                <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="480.0" prefWidth="350.0" spacing="15.0" styleClass="popup-card">
                    <children>
                        <Label fx:id="popupClubName" styleClass="popup-title" text="Nama Club" />
                        <Label styleClass="popup-subtitle" text="Tambahkan" />
                        <Text fx:id="popupClubDescription" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="popup-description" text="Deskripsi lengkap tentang klub ini akan ditampilkan di sini agar mahasiswa dapat membacanya sebelum memutuskan untuk bergabung." textAlignment="CENTER" wrappingWidth="300.0" />
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button fx:id="popupCancelButton" mnemonicParsing="false" onAction="#hideJoinPopup" styleClass="popup-button-cancel" text="CANCEL" />
                                <Button fx:id="popupJoinButton" mnemonicParsing="false" onAction="#handleJoinClub" styleClass="popup-button-join" text="JOIN" />
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>