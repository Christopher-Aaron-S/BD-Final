<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="MainApp.DashboardController" prefWidth="800.0" prefHeight="600.0">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10.0" prefWidth="200.0" style="-fx-background-color: #f0f0f0;" alignment="TOP_LEFT">
            <children>
                <Label text="Pitch.io" style="-fx-font-size: 18px; -fx-text-fill: #5a2dd8; -fx-font-weight: bold;" />
                <Button text="Dashboard" maxWidth="Infinity" />
                <Button text="Search" maxWidth="Infinity" />
                <Button text="My Club" maxWidth="Infinity" />
                <Button text="Attendance" maxWidth="Infinity" />
                <Button text="Member" maxWidth="Infinity" />

                <!-- Spacer agar Log Out ada di bawah -->
                <Region VBox.vgrow="ALWAYS" />

                <!-- Tombol Log Out -->
                <Button text="âŽ‹ Log Out" maxWidth="Infinity"
                        style="-fx-text-fill: red; -fx-font-weight: bold;"
                        onAction="#handleLogout"/>
            </children>
        </VBox>
    </left>

    <!-- Greeting Center -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
            <children>
                <Label fx:id="nameLabel" text="Hi, Alyssa" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <Label text="Ready to start your day with some pitch decks?" />
            </children>
        </VBox>
    </center>

</BorderPane>
