<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="MainApp.MainViewController" prefHeight="720.0" prefWidth="1280.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <VBox fx:id="sidebar" alignment="TOP_CENTER" prefWidth="220.0" spacing="15.0" styleClass="sidebar">
            <padding>
                <Insets top="20.0" />
            </padding>
            <children>
                <Label styleClass="sidebar-title" text="KampusClub" />
                <VBox VBox.vgrow="ALWAYS">
                    <Button fx:id="dashboardButton" onAction="#showDashboard" styleClass="sidebar-button" text="Dashboard" />
                    <Button fx:id="clubsButton" onAction="#showClubs" styleClass="sidebar-button" text="Clubs" />
                    <Button fx:id="activitiesButton" onAction="#showActivities" styleClass="sidebar-button" text="Activities" />
                    <Button fx:id="myProfileButton" onAction="#showMyProfile" styleClass="sidebar-button" text="My Profile" />
                </VBox>
                <VBox>
                    <Button fx:id="settingsButton" onAction="#showSettings" styleClass="sidebar-button" text="Settings" />
                    <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="sidebar-button" text="Log Out" />
                </VBox>
            </children>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f4f5f7;">
        </StackPane>
    </center>
</BorderPane>